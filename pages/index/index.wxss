/**index.wxss**/

.navbar {
  display: flex;
  border-bottom: 1px solid #eee;
}

.navbar-item {
  flex: 1.0;
  text-align: center;
  font-size: 14px;
  color: #999;
  margin-bottom: -1px;
}

.navbar-text {
  display: block;
  width: 30px;
  padding: 10px;
  margin: auto;
}

.navbar-text.active {
  border-bottom: 2px solid #000;
  color: #000;
  font-weight: bold;
}

.hidden {
  display: none;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.line-text {
  font-size: 14px;
  border-left: 2px solid #000;
  padding-left: 5px;
  margin: 10px 10px;
}

.yujia-image {
  border-radius: 50%;
  margin-right: 50px;
}

.yujia-header {
  display: flex;
  padding: 7px 15px;
  font-size: 18px;
  font-weight: bold;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
}

.yujia-view {
  font-size: 12px;
  color: #999;
}

.yujia-eye {
  width: 14px;
  height: 12px;
}

.yujia-addr-tel {
  display: flex;
  justify-content: space-between;
  padding: 5px 15px;
  font-size: 15px;
  color: #859baa;
  border-bottom: 1px solid #f0f0f0;
}

.yujia-tel {
  padding-left: 15px;
  border-left: 1px solid #eee;
  color: #388ec7;
}

.yujia-short-desc {
  padding: 5px 15px;
  font-size: 15px;
  color: #859baa;
  border-bottom: 1px solid #f0f0f0;
}

.yujia-detail {
  padding: 5px 15px;
  font-size: 10px;
  border-bottom: 1px solid #b8b8b8;
}

.yujia-detail-link {
  float: right;
  color: rgb(0, 0, 204);
}

.clearfix::after {
  display: block;
  height: 0;
  clear: both;
  content: '';
}
